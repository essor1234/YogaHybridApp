<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YogaHybridApp.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <!-- Welcome Header -->
            <Label Text="{Binding WelcomeMessage}" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="#333333" 
                   Margin="0,20,0,10" />

            <!-- Buttons -->
            <Button Text="View All Courses" 
                    Command="{Binding NavigateToCoursesCommand}" 
                    BackgroundColor="#6200EA" 
                    TextColor="White" 
                    FontSize="18" 
                    FontAttributes="Bold" 
                    CornerRadius="10" 
                    HeightRequest="50" 
                    HorizontalOptions="Fill" />

            <Button Text="View Ordered Classes" 
                    Command="{Binding NavigateToOrderedClassesCommand}" 
                    BackgroundColor="#6200EA" 
                    TextColor="White" 
                    FontSize="18" 
                    FontAttributes="Bold" 
                    CornerRadius="10" 
                    HeightRequest="50" 
                    HorizontalOptions="Fill" />

            <Button Text="Search Classes" 
                    Command="{Binding NavigateToSearchClassesCommand}" 
                    BackgroundColor="#6200EA" 
                    TextColor="White" 
                    FontSize="18" 
                    FontAttributes="Bold" 
                    CornerRadius="10" 
                    HeightRequest="50" 
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>